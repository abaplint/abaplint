{
  "name": "abaplint",
  "version": "2.1.2",
  "description": "Linter for ABAP",
  "bin": {
    "abaplint": "./abaplint"
  },
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "compile": "tsc",
    "postcompile": "sh scripts/version.sh",
    "pretest": "npm run compile",
    "test": "mocha --require source-map-support/register --recursive --reporter progress \"build/test/**/*.js\"",
    "posttest": "npm run tslint",
    "prebrowserify": "tsc --target ES3 --lib es2017 --outdir build/web",
    "browserify": "sh scripts/version.sh",
    "postbrowserify": "browserify build/web/src/index_web.js -o build/bundle.js -s abaplint",
    "uglify": "uglifyjs build/bundle.js --compress --mangle --keep-fnames -o build/bundle.js",
    "postuglify": "rm -rf build/web",
    "preweb.playground": "npm run browserify",
    "web.playground": "npm run uglify",
    "postweb.playground": "cp build/bundle.js web/playground/build/abaplint.js",
    "web.syntax": "sh web/syntax.sh",
    "prepublishOnly": "rm -rf build && npm run test",
    "preschema": "node scripts/schema.js > scripts/schema.ts",
    "schema": "npm install --no-save ts-json-schema-generator",
    "postschema": "ts-json-schema-generator --jsDoc extended --path scripts/schema.ts > scripts/schema.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abaplint/abaplint.git"
  },
  "engines": {
    "node": ">=10.5.0",
    "npm": ">= 6.0.0"
  },
  "keywords": [
    "ABAP",
    "lint"
  ],
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abaplint/abaplint/issues"
  },
  "homepage": "https://abaplint.org",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/glob": "^7.1.1",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/progress": "^2.0.3",
    "browserify": "^16.0.0",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "railroad-diagrams": "git+https://github.com/tabatkins/railroad-diagrams#gh-pages",
    "source-map-support": "^0.5.13",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.3",
    "uglify-js": "^3.6.0"
  },
  "dependencies": {
    "glob": "^7.1.4",
    "minimist": "^1.2.0",
    "progress": "^2.0.3",
    "vscode-languageserver-protocol": "^3.14.1",
    "xml-js": "^1.6.11"
  }
}
