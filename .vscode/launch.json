{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "120000",
                "--require",
                "source-map-support/register",
                "--recursive",
                "--colors",
                "--reporter",
                "progress",
                "\"./build/test/**/*.js\""
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}