{
    "name": "@abaplint/cli",
    "version": "2.37.13",
    "description": "Command Line Interface",
    "bin": {
        "abaplint": "./abaplint"
    },
    "scripts": {
        "lint": "eslint src/**/*.ts test/**/*.ts --format unix",
        "compile": "tsc",
        "pretest": "npm run compile",
        "test": "mocha",
        "posttest": "npm run lint && npm run webpack",
        "webpack": "webpack --progress --display=minimal",
        "prepublishOnly": "rm -rf build && npm run test"
    },
    "mocha": {
        "recursive": true,
        "reporter": "progress",
        "spec": "./build/test/*.js",
        "require": "source-map-support/register"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abaplint/abaplint.git"
    },
    "engines": {
        "node": ">=10.5.0",
        "npm": ">= 6.0.0"
    },
    "keywords": [
        "ABAP",
        "lint"
    ],
    "author": "Lars Hvam Petersen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/abaplint/abaplint/issues"
    },
    "homepage": "https://abaplint.org",
    "devDependencies": {
        "@abaplint/core": "^2.37.13",
        "@types/chai": "^4.2.11",
        "@types/glob": "^7.1.3",
        "@types/minimist": "^1.2.0",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.23",
        "@types/progress": "^2.0.3",
        "chai": "^4.2.0",
        "eslint": "^7.4.0",
        "glob": "^7.1.6",
        "json5": "^2.1.3",
        "memfs": "^3.2.0",
        "minimist": "^1.2.5",
        "mocha": "^8.0.1",
        "progress": "^2.0.3",
        "typescript": "^3.9.6",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "xml-js": "^1.6.11"
    }
}
